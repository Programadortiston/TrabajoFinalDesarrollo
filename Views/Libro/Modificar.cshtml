<body>
    <form asp-controller="Libro" asp-action="ModificarLibro" method="post">
        <input type="hidden" asp-for="IdLibro" />
        Titulo<input type="text" asp-for="Titulo" class="form-control" placeholder="Ingrese el titulo" />
        Genero<input type="text" asp-for="Genero" class="form-control" placeholder="Ingrese el genero" />
        Autor<input type="text" asp-for="Autor" class="form-control" placeholder="Ingrese el autor" />
        Año<input type="text" asp-for="Año" class="form-control" placeholder="Ingrese el año" />
        Stock<input type="number" asp-for="Stock" class="form-control" placeholder="Ingrese el stock" />
        Link<input type="text" asp-for="Link" class="form-control" placeholder="Ingrese el link de la portada" />
        <button type="submit" class="btn btn-info" onclick="return confirmarModificar()">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Modificar
        </button>
    </form>
</body>
