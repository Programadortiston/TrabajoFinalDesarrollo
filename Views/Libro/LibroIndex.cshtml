@{
}
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link href="https://fonts.googleapis.com/css?family=Raleway:400,600,700,800" rel='stylesheet' type='text/css'>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
        <link rel="stylesheet" href="~/css/libro.css" />
    </head>
    <body>
        <!--Div de las herramientas de busqueda-->
        <h2 class="alert-warning">Bienvenido(a): @ViewBag.nombreUsuario</h2>
        <div class="herramientas">
            <div class="buscar-area">
                <input type="text" id="buscar" placeholder="Buscar título" onkeyup="buscar()" />
                <button id="btnBuscar">Buscar</button>
            </div>
        </div>
    <div class="libros libros-tabla row" id="buscar-libros">
        <div class="col-sm-12 mb-3" id="contenedor2">
        @foreach (var item in Model)
        {
            <div class="contenedor">
                <div class="libro">
                    <div class="libro-img">
                        <img src="@item.Link">
                    </div>
                    <div class="libro-content">
                        <h3 class="titulo">
                            @item.Titulo
                        </h3>
                        <h3 class="autor">
                            <small>@item.Autor</small>
                        </h3>
                        <p class="libro-texto stock">Stock: @item.Stock</p>
                        <p class="libro-texto año">Año: @item.Año</p>
                        <a asp-action="Reservar" asp-route-id="@item.IdLibro" class="btn btn-primary">Reservar</a>
                    </div>
                </div>
            </div>
        }
        </div>
    </div>
    </body>
</html>
<script type="text/javascript" src="~/js/buscar.js"></script>